  "bugs": {
    "url": "https://github.com/kagawagao/opas/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/kagawagao/opas#readme",
  "dependencies": {
    "@opas/core": "^0.13.0",
    "docx": "^9.0.2",
    "fs-extra": "^11.2.0",
    "json2md": "^2.0.0"
  }
}
