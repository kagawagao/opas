{
  "name": "@opas/plugin-sdk",
  "version": "0.0.5",
  "description": "sdk plugin for OpenAPI toolkit",
  "main": "lib/index.js",
  "types": "index.d.ts",
  "files": [
    "lib",
    "index.d.ts"
  ],
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "prebuild": "tsc --build --clean",
