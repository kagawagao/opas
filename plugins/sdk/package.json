  },
  "homepage": "https://github.com/kagawagao/opas#readme",
  "dependencies": {
    "@babel/generator": "^7.23.6",
    "@babel/template": "^7.22.15",
    "@babel/types": "^7.23.6",
    "@opas/core": "^0.0.5",
    "@opas/helper": "^0.0.5",
    "fs-extra": "^11.2.0",
    "lodash": "^4.17.21"
